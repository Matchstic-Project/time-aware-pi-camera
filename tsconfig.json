{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "incremental": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "jest"
        ],
    },
    "include": [
        "src/**/*"
    ],
}
